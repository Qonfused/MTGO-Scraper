{
  "name": "mtgo-scraper",
  "private": true,
  "version": "0.0.1",
  "description": "MTGO event scraper for the Videre Project",
  "homepage": "https://videreproject.com",
  "repository": "https://github.com/videre-project/mtgo-scraper.git",
  "license": "MIT",
  "main": "src/config.ts",
  "dependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/helmet": "0.0.48",
    "@types/jest": "^26.0.14",
    "@types/jsdom": "^16.2.5",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.11.2",
    "@types/node-fetch": "^2.5.7",
    "@types/puppeteer": "^3.0.3",
    "@types/uuid": "^8.3.0",
    "cors": "^2.8.5",
    "dompurify": "^2.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "firebase-admin": "^9.3.0",
    "helmet": "^4.1.1",
    "jsdom": "^16.4.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "node-fetch": "^2.6.1",
    "puppeteer": "^5.4.1",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.4.2",
    "migrate": "^1.7.0",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-node-dev": "^1.0.0-pre.63"
  },
  "scripts": {
    "start": "ts-node-dev src",
    "build": "tsc",
    "serve": "tsc && node build",
    "migrate": "node ./bin/migrate.js",
    "migrate:create": "migrate create --migrations-dir='./migrations'",
    "test": "yarn jest --watchAll --verbose --testTimeout=10000",
    "lint": "eslint .",
    "format": "prettier src --write"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "build",
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "build",
      "node_modules"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ]
  }
}
